<br>
<div class="container">
  <div class="row">

    <div class="col-sm-4">
      <!-- One of three columns -->
    </div>

    <div class="col-sm-4">
      <h1>New Review</h1>

        <%= simple_form_for [@restaurant, @review] do |f| %>

          <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5]%>
          <%= f.input :content %>

          <div style="text-align: center">
          <%= f.submit class: 'btn btn-primary' %>
          </div>
        <% end %>
      <br>
      <div style="text-align: center">
        <%= link_to "Back to restaurant" , restaurant_path(@restaurant), class: 'btn btn-primary' %>
      </div>
      <br>
      <div style="text-align: center">
        <%= link_to "Back to the list of all restaurants" , restaurants_path, class: 'btn btn-primary' %>
      </div>
    </div>

    <div class="col-sm-4">
      <!-- One of three columns -->
    </div>

  </div>
</div>
