<div class="container">
  <div class="row">

    <div class="col-sm-4">
      <!-- One of three columns -->
    </div>

    <div class="col-sm-4">
      <div style="margin-left: 20px">
        <h1><% @restaurant.name %> reviews:</h1>
        <ul>
          <% @restaurant.reviews.each do |review| %>
            <li><%=  review.content %></li>
            <li><%= review.rating %></li>
          <% end %>
        </ul>
        <div style="text-align: center">
        <%= link_to "Add a review" , new_restaurant_review_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <!-- One of three columns -->
    </div>

  </div>
</div>
